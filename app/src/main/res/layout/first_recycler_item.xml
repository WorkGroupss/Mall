<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="4dp"
              android:background="#fff">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e4e4e4"></View>
    <FrameLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@mipmap/ic_launcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="190dp"
            android:layout_marginLeft="4dp"
            android:id="@+id/imageView"/>
        <ImageView
            android:id="@+id/picSmall"
            android:src="@drawable/a"
            android:layout_width="match_parent"
            android:layout_height="230dp"/>
    </FrameLayout>
    <TextView
        android:id="@+id/productTitle"
        android:layout_width="match_parent"
        android:paddingLeft="10dp"
        android:layout_height="25dp"
        android:singleLine="true"
        android:text="法国Avene雅漾舒护活泉水喷雾300ml 补水保湿舒缓肌肤"
        android:textSize="20sp"
        android:typeface="serif"
        android:ellipsize="end"/>
    <TextView
        android:id="@+id/recommend"
        android:layout_marginTop="20dp"
        android:paddingLeft="10dp"
        android:singleLine="false"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:maxLines="2"
        android:text="护肤界人手一瓶，无色无味，镇定肌肤。含微量元素和二氧化硅，可在肌肤表面形成舒缓、透气保护膜。"/>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingLeft="10dp">
        <TextView
            android:id="@+id/proPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#f55"
            android:text="82"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/liziPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="82.99"/>
        <TextView
            android:id="@+id/salesCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已经售出 27271件"/>
        <Button
            android:id="@+id/add_cart"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:background="@drawable/jiarugouwuche"
            android:text="加入购物车"
            />
    </LinearLayout>
</LinearLayout>