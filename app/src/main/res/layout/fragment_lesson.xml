<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mall.fragment_lesson.LessonFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:background="#f55"
        app:elevation="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        <ImageView
            android:id="@+id/mall_search"
            android:layout_width="40px"
            android:layout_height="40px"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="24px"
            android:layout_marginLeft="10px"
            android:clickable="true"
            android:onClick="search"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="26px"
            android:layout_centerInParent="true"
            android:text="功课"
            android:textSize="36px" />

        <ImageView
            android:id="@+id/mall_mail"
            android:layout_width="42px"
            android:layout_height="40px"
            android:layout_marginBottom="24px"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30px"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="620px">

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="20px"
            android:background="#f2f2f2" />

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager_head"
            android:layout_width="match_parent"
            android:layout_height="470px"
            android:layout_marginTop="20px"></android.support.v4.view.ViewPager>

        <TextView
            android:id="@+id/tv_viewpager"
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:layout_gravity="bottom"
            android:layout_marginBottom="40px"
            android:background="#20000000"
            android:gravity="center_vertical"
            android:paddingLeft="30px"
            android:text="推荐：迪奥新品口红试色"
            android:textColor="#fefefe"
            android:textSize="30px" />

        <LinearLayout
            android:id="@+id/vp_head_points"
            android:layout_width="match_parent"
            android:layout_height="40px"
            android:layout_gravity="center_horizontal|bottom"
            android:background="#f2f2f2"
            android:gravity="center">

            <ImageView
                android:id="@+id/vp_head_imageView1"
                android:layout_width="12px"
                android:layout_height="12px"
                android:background="@android:drawable/presence_online" />

            <ImageView
                android:id="@+id/vp_head_imageView2"
                android:layout_width="12px"
                android:layout_height="12px"
                android:layout_marginLeft="20px"
                android:background="@android:drawable/presence_invisible" />

            <ImageView
                android:id="@+id/vp_head_imageView3"
                android:layout_width="12px"
                android:layout_height="12px"
                android:layout_marginLeft="20px"
                android:background="@android:drawable/presence_invisible" />

            <ImageView
                android:id="@+id/vp_head_imageView4"
                android:layout_width="12px"
                android:layout_height="12px"
                android:layout_marginLeft="20px"
                android:background="@android:drawable/presence_invisible" />
        </LinearLayout>

    </FrameLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></android.support.v7.widget.RecyclerView>


</LinearLayout>
