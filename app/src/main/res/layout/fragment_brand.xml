    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.mall.fragment_search.BrandFragment">


    <ExpandableListView
        android:id="@+id/brand_list"
        android:layout_width="0dp"
        android:layout_height="match_parent"
